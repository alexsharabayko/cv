<div class="page skill-page">
    <section class="section">
        <h1 class="section-title">Tech Skills</h1>

        <ul class="tech-skills">
            {{~it.commonTechSkills:skill}}
            <li class="tech-skills-item">
                <div class="tech-skills-title">
                    <h4 class="tech-skills-title__name">{{=skill.title}}</h4>
                    <p class="tech-skills-title__description">{{=skill.description}}</p>

                    <div class="tech-skills-title__keywords">
                        <span class="tech-skills-title__keywords__label">Keywords</span>
                        <span class="tech-skills-title__keywords__text">{{=skill.keywords}}</span>
                    </div>
                </div>

                <div class="tech-skills-progress fn-tech-skills-progress"
                      data-percent="{{=skill.level}}" data-color="#558e6a" data-font-color="#558e6a" data-line-width="5">123</div>
            </li>
            {{~}}
        </ul>
    </section>

    <section class="section">
        <h1 class="section-title">Languages Skills</h1>

        <ul class="language-skills">
            {{~it.languageSkills:skill}}
            <li class="language-skills-item">
                <h4 class="language-skills-title">{{=skill.title}} <span class="small">{{=skill.levelInWords}}</span></h4>

                <div class="language-skills-progress fn-language-skills-progress" data-percent="{{=skill.level}}" data-color="#558e6a"></div>

                <p class="language-skills-description">{{=skill.description}}</p>
            </li>
            {{~}}
        </ul>
    </section>

    <section class="section">
        <h1 class="section-title">Tools Skills</h1>

        <ul class="tools-skills">
            {{~it.toolsSkills:skill}}
            <li class="tools-skills-item">
                <ul class="tools-skills-progress fn-tools-skills-progress" data-percent="{{=skill.level}}" data-color="#558e6a"></ul>

                <h4 class="tools-skills-title">{{=skill.title}}</h4>
            </li>
            {{~}}
        </ul>
    </section>
</div>